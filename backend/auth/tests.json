      "name": "Login with valid credentials",
      "method": "POST",
      "path": "/",
      "body": {
        "action": "login",
        "email": "mbadir@mba.com",
        "password": "password123"
      },
      "expectedStatus": 200,
      "expectedBody": {
        "user": {
          "email": "string",
          "role": "string"
        },
        "token": "string"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Login with invalid credentials",
      "method": "POST",
      "path": "/",
      "body": {
        "action": "login",
        "email": "fake@mba-corp.com",
        "password": "wrongpass"
      },
      "expectedStatus": 401,
      "expectedBody": {
        "error": "string"
      },
      "bodyMatcher": "partial"
    }
  ]
}